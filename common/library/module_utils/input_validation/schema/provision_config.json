{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "node_name": {
      "type": "string",
      "description": "Name of the node.",
      "pattern": "^[a-zA-Z0-9._-]+$"
    },
    "pxe_mapping_file_path": {
      "type": "string",
      "description": "Path to the PXE mapping file."
    },
    "timezone": {
      "type": "string",
      "description": "Timezone setting.",
      "default": "GMT"
    },
    "language": {
      "type": "string",
      "description": "Language setting.",
      "default": "en-US"
    },
    "default_lease_time": {
      "type": "string",
      "description": "Default lease time for DHCP.",
      "pattern": "^[0-9]+$",
      "default": "86400"
    }
  },
  "required": [
    "node_name",
    "pxe_mapping_file_path",
    "timezone",
    "language",
    "default_lease_time"
  ]
}
