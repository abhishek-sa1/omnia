{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Telemetry Configuration",
  "type": "object",
  "properties": {
    "kube_prometheus_support": {
      "type": "boolean"
    },
    "prometheus_scrape_interval": {
     "type": "integer",
     "minimum": 1,
     "default": 15
    },

    "idrac_telemetry_support": {
      "type": "boolean"
    },
    "idrac_telemetry_collection_type": {
      "type": "string"
    },
    "visualization_support": {
      "type": "boolean"
    },
    "federated_idrac_telemetry_collection": {
      "type": "boolean"
    }
  },
  "required": [
    "kube_prometheus_support",
    "prometheus_scrape_interval",
    "idrac_telemetry_support",
    "visualization_support",
    "federated_idrac_telemetry_collection"
  ],
  "allOf": [
    {
      "if": {
        "properties": {
          "idrac_telemetry_support": {
                "const": true
          }
        }
      },
      "then":{
        "required": [
          "idrac_telemetry_collection_type"
        ],
        "properties": {
          "idrac_telemetry_collection_type": {
          "type": "string",
          "minLength": 1
          }
        }
      }
    }
  ]
}
