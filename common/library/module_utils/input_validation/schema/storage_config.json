{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Configuration Schema",
    "type": "object",
    "properties": {
      "nfs_client_params": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "nfs_name": {
              "type": "string",
              "description": "The unique NFS server name"
            },
            "server_ip": {
              "type": "string",
              "pattern": "^(localhost|(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)(?:\\.(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)){3})$"
            },
            "server_share_path": {
              "type": "string"
            },
            "client_share_path": {
              "type": "string"
            },
            "client_mount_options": {
              "type": "string"
            }
          },
          "required": [
            "server_ip",
            "server_share_path",
            "client_share_path",
            "client_mount_options"
          ]
        },
        "minItems": 1
      }
    },
    "required": [
      "nfs_client_params"
    ]
  }