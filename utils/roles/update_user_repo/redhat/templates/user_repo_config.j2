[Omnia-RPM-Repo{{ item.name }}]
name=Omnia-Repo-{{ item.name }}
baseurl={{ (pulp_dist_result | selectattr('name', 'equalto', item.name) | map(attribute='base_url') | list | first) }}
enabled=1
gpgcheck=0
skip_if_unavailable=True
{% if pulp_protocol_https %}
sslverify=1
sslcacert={{ pulp_cert_path }}
{% endif %}
